<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luasvolume.luasdanvolume.LuasPersegiPanjang">

    <TextView
        android:id="@+id/tvLuasPersegiPanjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="LUAS PERSEGI PANJANG"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/tvPanjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="Panjang"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvLebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Lebar"
        android:textSize="20dp"
        android:layout_below="@+id/etPanjang"
        android:layout_alignLeft="@+id/tvPanjang"
        android:layout_alignStart="@+id/tvPanjang" />
    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Panjang"
        android:layout_alignBaseline="@+id/tvPanjang"
        android:layout_alignBottom="@+id/tvPanjang"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:id="@+id/etPanjang" />
    <EditText
        android:id="@+id/etLebar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Lebar"
        android:layout_alignBaseline="@+id/tvLebar"
        android:layout_alignBottom="@+id/tvPanjang"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />
    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="hitung" />
    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHitung"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="HASIL"
        android:textSize="20dp"/>
</RelativeLayout>
