<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luasvolume.luasdanvolume.VolumeTabung">

    <TextView
        android:id="@+id/tvVTabung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="VOLUME TABUNG"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/tvJariT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="Jari-jari"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/tvTTabung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Tinggi Tabung"
        android:textSize="16dp"
        android:layout_below="@+id/etJariT"
        android:layout_alignLeft="@+id/tvJariT"
        android:layout_alignStart="@+id/tvJariT" />
    <EditText
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:hint="Ketik disini"
        android:layout_alignBaseline="@+id/tvJariT"
        android:layout_alignBottom="@+id/tvJariT"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:id="@+id/etJariT" />
    <EditText
        android:id="@+id/etTTabung"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:hint="Ketik disini"
        android:layout_alignBaseline="@+id/tvTTabung"
        android:layout_alignBottom="@+id/tvJariT"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />
    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="hitung" />
    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHitung"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="HASIL"
        android:textSize="20dp"/>
</RelativeLayout>
