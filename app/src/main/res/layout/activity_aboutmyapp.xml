<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luasvolume.luasdanvolume.aboutmyapp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/ivGambarC"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/cube"
        />
    <TextView
        android:id="@+id/tvVersi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivGambarC"
        android:textStyle="bold"
        android:text="Luas dan Volume
v1.0"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:id="@+id/tvDes"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvVersi"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Luas dan Volume"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/tvdeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_deskripsi"
        android:layout_below="@id/tvDes"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_below="@id/tvdeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPengembang"
        android:textStyle="bold"
        android:text="Pengembang"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvident"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/tvPengembang"
        android:text="Afifah Nurul Nisa"/>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_below="@id/tvident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Email : afifahnurulnisa3@gmail.com"/>
        <TextView
            android:layout_below="@id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Instagram : afifahnurulnisa.nn"/>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>
